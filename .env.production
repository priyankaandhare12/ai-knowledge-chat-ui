# Environment variables for Vercel deployment
# Copy this file to .env.example and update values for your deployment

# Backend API URL (will be your Vercel backend URL)
VITE_API_URL=https://your-backend-app.vercel.app

# Auth0 Configuration
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id_here
VITE_AUTH0_AUDIENCE=https://your-tenant.auth0.com/api/v2/

# OIDC Configuration (auto-configured from Auth0)
VITE_OIDC_REDIRECT_URI=https://your-frontend-app.vercel.app/auth/callback
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=https://your-frontend-app.vercel.app

# Optional: Environment indicator
VITE_APP_ENV=production