# Environment Configuration for Knowledge Chat UI

# API Configuration
VITE_API_URL=http://localhost:3001

# Domain Restrictions Configuration
# Enable domain restrictions (true/false)
VITE_DOMAIN_RESTRICTIONS_ENABLED=false

# Comma-separated list of allowed email domains (e.g., "company.com,partner.org")
# Leave empty to allow all domains when restrictions are enabled
VITE_ALLOWED_DOMAINS=

# Allow all Gmail users (true/false) - default: true
# Set to false to block Gmail unless explicitly in VITE_ALLOWED_DOMAINS
VITE_ALLOW_ALL_GMAIL=true

# Custom message shown when domain is blocked
VITE_DOMAIN_BLOCK_MESSAGE=Access restricted to authorized company domains only.

# Example Configurations:
# 
# 1. Allow only company domain:
# VITE_DOMAIN_RESTRICTIONS_ENABLED=true
# VITE_ALLOWED_DOMAINS=yourcompany.com
# VITE_ALLOW_ALL_GMAIL=false
#
# 2. Allow company + Gmail:
# VITE_DOMAIN_RESTRICTIONS_ENABLED=true  
# VITE_ALLOWED_DOMAINS=yourcompany.com
# VITE_ALLOW_ALL_GMAIL=true
#
# 3. Block only Gmail (allow all other domains):
# VITE_DOMAIN_RESTRICTIONS_ENABLED=true
# VITE_ALLOWED_DOMAINS=
# VITE_ALLOW_ALL_GMAIL=false